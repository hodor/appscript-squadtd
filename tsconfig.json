{
    "compilerOptions": {
        "outFile": "./build/main.js",
        "lib": ["es2015", "dom", "es5"],
        "target": "es3",
        "module": "amd",
        "moduleResolution": "node",
        "noImplicitAny": true,
        "strictNullChecks": false,
        "alwaysStrict": true,
        "suppressImplicitAnyIndexErrors": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "pretty": true,
        "removeComments": true,
    },
    "include": [
        "./src/**/*"
    ]
}