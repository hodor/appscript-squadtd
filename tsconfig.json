{
    "compilerOptions": {
        "outFile": "./build/main.js",
        "lib": ["ES2015"],
        "target": "ES3",
        "noImplicitAny": true,
        "strictNullChecks": false,
        "importHelpers": true,
        "alwaysStrict": true,
        "suppressImplicitAnyIndexErrors": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "pretty": true,
        "removeComments": true,
    },
    "include": [
        "./src/**/*"
    ]
}
